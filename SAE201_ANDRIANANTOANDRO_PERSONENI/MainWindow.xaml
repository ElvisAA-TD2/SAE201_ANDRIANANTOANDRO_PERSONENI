<Window
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Stock'Ink"
    Width="1200"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Icon="/Images/logo.ico">

    <Grid x:Name="conteneur_Parent">
        <ContentControl x:Name="conteneur_authentification" />

        <Grid x:Name="conteneur_haut"
          Height="200"
          Visibility="Collapsed"
          VerticalAlignment="Top"
          Grid.ColumnSpan="2" />

        <ScrollViewer Margin="0,200,0,0"
                  VerticalScrollBarVisibility="Auto"
                  Grid.ColumnSpan="2"
                  Visibility="Collapsed"
                  x:Name="scrollViewer_conteneur_principal">
            <ContentControl x:Name="conteneur_principal" />
        </ScrollViewer>
    </Grid>




</Window>
