<Window
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Stock'Ink"
    Width="1200"
    Height="700"
    Icon="/Images/logo.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid x:Name="conteneur_Parent">
        <ContentControl x:Name="conteneur_authentification" Panel.ZIndex="10" />

        <Grid
            x:Name="conteneur_haut"
            Grid.ColumnSpan="2"
            Height="200"
            VerticalAlignment="Top"
            Visibility="Collapsed" />

        <ScrollViewer
            x:Name="scrollViewer_conteneur_principal"
            Grid.ColumnSpan="2"
            Margin="0,200,0,0"
            VerticalScrollBarVisibility="Auto"
            Visibility="Collapsed">
            <ContentControl x:Name="conteneur_principal" />
        </ScrollViewer>
    </Grid>




</Window>
