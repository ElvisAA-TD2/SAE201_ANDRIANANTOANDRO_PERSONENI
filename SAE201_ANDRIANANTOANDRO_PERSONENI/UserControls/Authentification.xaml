<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.Authentification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Background="#FFDDF1FF">
        <StackPanel Orientation="Horizontal" Width="1200">
            <Image Source="/Images/Logo_pilot.png" Stretch="Uniform" Width="500" Margin="30,0,0,0"/>
            <Border CornerRadius="30" Background="#FFBBE3FF" Padding="10" BorderBrush="Transparent" Height="486" VerticalAlignment="Center" Margin="75,0,0,0">
                <StackPanel Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Login" Style="{DynamicResource LabelTextBox}" Foreground="#FF016BB7" FontWeight="Normal" FontSize="24" FontFamily="Dubai" Panel.ZIndex="10" Width="410"/>
                    <TextBox Style="{DynamicResource TextBox_BorderRadius}" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="415" Height="68" Background="#FF4084B4" BorderBrush="{x:Null}" Foreground="White" FontSize="18" Padding="15,20,0,0"/>
                    <Label Content="Mot de passe" Style="{DynamicResource LabelTextBox}" Foreground="#FF016BB7" FontWeight="Normal" FontSize="24" FontFamily="Dubai" Panel.ZIndex="10" Width="406" Margin="0,20,0,0"/>
                    <PasswordBox Style="{DynamicResource PasswordBoxStyle}"  HorizontalAlignment="Center" VerticalAlignment="Top" Width="415" Height="68" Background="#FF4084B4" BorderBrush="{x:Null}" Foreground="White" FontSize="18" Padding="15,20,0,0"/>
                    <Button Style="{DynamicResource Button_BorderRadiud}" Content="Se connecter" HorizontalAlignment="Center" Height="78" Width="239" BorderBrush="{x:Null}" Background="#FF335A68" Foreground="White" FontSize="18" Click="SeConnecter_Click" Margin="0,40,0,0" IsDefault="True"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
