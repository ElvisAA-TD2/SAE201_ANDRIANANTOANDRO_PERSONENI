<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.Authentification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF">
        <StackPanel Width="1200" Orientation="Horizontal">
            <Image
                Width="500"
                Margin="30,0,0,0"
                Source="/Images/Logo_pilot.png"
                Stretch="Uniform" />
            <Border
                Height="486"
                Margin="75,0,0,0"
                Padding="10"
                VerticalAlignment="Center"
                Background="#FFBBE3FF"
                BorderBrush="Transparent"
                CornerRadius="30">
                <StackPanel
                    Width="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Label
                        Width="410"
                        Panel.ZIndex="10"
                        Content="Login"
                        FontFamily="Dubai"
                        FontSize="24"
                        FontWeight="Normal"
                        Foreground="#FF016BB7"
                        Style="{DynamicResource LabelTextBox}" />
                    <TextBox
                        x:Name="tb_login"
                        Width="415"
                        Height="68"
                        Padding="15,20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="#FF4084B4"
                        BorderBrush="{x:Null}"
                        FontSize="18"
                        Foreground="White"
                        Style="{DynamicResource TextBox_BorderRadius}"
                        Text=""
                        TextWrapping="Wrap" />
                    <Label
                        Width="406"
                        Margin="0,20,0,0"
                        Panel.ZIndex="10"
                        Content="Mot de passe"
                        FontFamily="Dubai"
                        FontSize="24"
                        FontWeight="Normal"
                        Foreground="#FF016BB7"
                        Style="{DynamicResource LabelTextBox}" />
                    <PasswordBox
                        x:Name="tb_mdp"
                        Width="415"
                        Height="68"
                        Padding="15,20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="#FF4084B4"
                        BorderBrush="{x:Null}"
                        FontSize="18"
                        Foreground="White"
                        Style="{DynamicResource PasswordBoxStyle}" />
                    <Button
                        Width="239"
                        Height="78"
                        Margin="0,40,0,0"
                        HorizontalAlignment="Center"
                        Background="#FF335A68"
                        BorderBrush="{x:Null}"
                        Click="SeConnecter_Click"
                        Content="Se connecter"
                        FontSize="18"
                        Foreground="White"
                        IsDefault="True"
                        Style="{DynamicResource Button_BorderRadiud}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
