<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.SelectionRevendeur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF">
        <StackPanel Width="500" Background="#FFDDF1FF">
            <Label
                HorizontalAlignment="Center"
                Content="Selection du revendeur"
                Style="{DynamicResource LabelTextBox}" />
            <Rectangle
                Width="267"
                Height="1"
                RenderTransformOrigin="0.5,0.5"
                Stroke="#FF00538E">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label
                Margin="0,25,0,0"
                Content="Rechercher"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_rechercheMotClef"
                Width="220"
                Height="45"
                HorizontalAlignment="Left"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextChanged="TextBox_TextChanged"
                TextWrapping="Wrap" />
            <Button
                Width="118"
                Height="35"
                Margin="10,0,10,10"
                Padding="0"
                HorizontalAlignment="Right"
                Background="#FF0387FC"
                BorderBrush="Transparent"
                Click="CreationRevendeur_Click"
                Content="Créer un revendeur"
                Foreground="White"
                Style="{DynamicResource Button_BorderRadiud}" />
            <ScrollViewer Height="280" VerticalScrollBarVisibility="Auto">
                <ItemsControl
                    x:Name="listeRevendeurs"
                    Margin="0,20"
                    ItemsSource="{Binding LesRevendeurs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,5"
                                Padding="10"
                                Background="#BDDBF0"
                                CornerRadius="10">
                                <DockPanel LastChildFill="False">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="Black"
                                        Text="{Binding RaisonSociale}" />

                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Right"
                                        Orientation="Horizontal">

                                        <!--  Bouton Sélectionner  -->
                                        <Button
                                            Width="Auto"
                                            Height="32"
                                            Margin="0,0,10,0"
                                            Padding="10,0,10,0"
                                            Background="#FF00538E"
                                            BorderBrush="Transparent"
                                            Click="SelectionnerRevendeur_Click"
                                            Cursor="Hand"
                                            Style="{DynamicResource Button_BorderRadiud}"
                                            Tag="{Binding}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="Sélectionner" />
                                        </Button>

                                        <!--  Bouton Modifier  -->
                                        <Button
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Background="#FF0387FC"
                                            BorderBrush="Transparent"
                                            Click="ModifierRevendeur_Click"
                                            Cursor="Hand"
                                            Style="{DynamicResource Button_BorderRadiud}"
                                            Tag="{Binding}">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="White"
                                                Text="✎" />
                                        </Button>
                                    </StackPanel>
                                </DockPanel>

                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
