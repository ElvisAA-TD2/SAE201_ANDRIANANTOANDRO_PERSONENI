<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.AccueilEmploye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    Background="#FFFF0303"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Label
            Margin="74,24,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Recherche par mot clef"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            x:Name="tb_rechercheParMotClef"
            Width="320"
            Height="44"
            Margin="74,63,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Label
            Margin="78,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Catégorie"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            x:Name="tb_categorie"
            Width="204"
            Height="44"
            Margin="78,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Label
            Margin="358,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            x:Name="tb_type"
            Width="204"
            Height="44"
            Margin="358,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Label
            Margin="636,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type de pointe"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            x:Name="tb_typePointe"
            Width="204"
            Height="44"
            Margin="636,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Label
            Margin="918,126,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Couleur"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            x:Name="tb_couleur"
            Width="204"
            Height="44"
            Margin="918,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextChanged="TextBox_TextChanged"
            TextWrapping="Wrap" />
        <Button
            x:Name="btn_ajoutProduit"
            Width="174"
            Height="61"
            Margin="986,230,15,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#FF335A68"
            BorderBrush="{x:Null}"
            Click="AjouterProduit_Click"
            Content="Ajouter un produit"
            Foreground="White"
            RenderTransformOrigin="0.487,0.446"
            Style="{DynamicResource Button_BorderRadiud}"
            TabIndex="10" />
        <ScrollViewer
            Height="Auto"
            Margin="0,300,0,0"
            VerticalScrollBarVisibility="Auto">
            <DataGrid
                x:Name="dg_produits"
                Width="Auto"
                Margin="20,0,20,20"
                HorizontalAlignment="Center"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ColumnWidth="*"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding LesProduits}"
                Style="{DynamicResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding CodeProduit, ValidatesOnExceptions=True}"
                        Header="Code Produit" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomProduit}"
                        Header="Nom produit" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding UnType.UneCategorie.NomCategorie}"
                        Header="Catégorie" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding UnType.NomType}"
                        Header="Type" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding UnTypePointe.NomTypePointe}"
                        Header="Type de pointe" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomCouleurConcatene}"
                        Header="Couleur" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixVente}"
                        Header="Prix" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding QteStock}"
                        Header="Qte en stock" />
                    <DataGridTemplateColumn Width="*" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Width="100"
                                    Padding="5"
                                    Click="VoirDetailsProduit_Click"
                                    Content="Voir détails"
                                    Style="{DynamicResource Button_BorderRadiud}"
                                    Tag="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>



    </Grid>
</UserControl>
