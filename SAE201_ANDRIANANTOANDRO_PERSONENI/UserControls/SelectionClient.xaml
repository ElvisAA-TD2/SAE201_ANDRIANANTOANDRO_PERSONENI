<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.SelectionClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <Grid Background="#FFDDF1FF">
        <StackPanel Background="#FFDDF1FF" Width="500">
            <Label Content="Selection du revendeur" HorizontalAlignment="Center" Style="{DynamicResource LabelTextBox}"/>
            <Rectangle Height="1" Stroke="#FF00538E" Width="267" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label Content="Rechercher" Margin="0,25,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox x:Name="tb_rechercheMotClef" TextWrapping="Wrap" Text="" Width="220" HorizontalAlignment="Left" Style="{DynamicResource TextBoxRecherche}" Height="45" TextChanged="TextBox_TextChanged"/>
            <Button Content="Créer un revendeur" HorizontalAlignment="Right" Height="35" Width="118" Style="{DynamicResource Button_BorderRadiud}" Padding="0" Background="#FF0387FC" Foreground="White" BorderBrush="Transparent" Margin="10, 0 , 10, 10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="280">
                <ItemsControl x:Name="listeRevendeurs" Margin="0, 20" ItemsSource="{Binding LesRevendeurs}">
                    <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Margin="0 5" Background="#BDDBF0" Padding="10">
                                    <DockPanel LastChildFill="False">
                                        <TextBlock Text="{Binding RaisonSociale}"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Foreground="Black"
                                           DockPanel.Dock="Left" />

                                        <!-- Conteneur pour les boutons alignés à droite -->
                                        <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            DockPanel.Dock="Right"
                                            VerticalAlignment="Center">

                                            <!-- Bouton Sélectionner -->
                                            <Button Width="Auto" Height="32"
                                                Tag="{Binding}"
                                                Background="#FF00538E"
                                                BorderBrush="Transparent"
                                                Margin="0,0,10,0"
                                                Padding="10, 0, 10, 0"
                                                Cursor="Hand"
                                                Style="{DynamicResource Button_BorderRadiud}">
                                                <TextBlock Text="Sélectionner"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            </Button>

                                            <!--Bouton Modifier-->
                                            <Button Width="32" Height="32"
                                                Tag="{Binding}"
                                                Background="#FF0387FC"
                                                BorderBrush="Transparent"
                                                Padding="0"
                                                Cursor="Hand"
                                                Style="{DynamicResource Button_BorderRadiud}">
                                                <TextBlock Text="✎"
                                                   FontSize="16"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            </Button>
                                        </StackPanel>
                                    </DockPanel>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
