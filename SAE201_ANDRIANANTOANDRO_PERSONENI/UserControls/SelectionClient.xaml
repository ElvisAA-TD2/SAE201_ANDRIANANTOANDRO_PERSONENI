<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.SelectionClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <Grid Background="#FFDDF1FF">
        <StackPanel Background="#FFDDF1FF" Width="500">
            <Label Content="Selection du revendeur" HorizontalAlignment="Center" Style="{DynamicResource LabelTextBox}"/>
            <Rectangle Height="1" Stroke="#FF00538E" Width="267" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label Content="Rechercher" Margin="0,25,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Width="220" HorizontalAlignment="Left" Style="{DynamicResource TextBoxRecherche}" Height="36"/>
            <Button Content="Créer un revendeur" HorizontalAlignment="Right" Height="31" Width="118"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ListeFournisseurs" Margin="10" ItemsSource="{Binding LesRevendeurs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10" Margin="0 5" Background="#BDDBF0" Padding="10">
                                <DockPanel>
                                    <!-- Texte du fournisseur -->
                                    <TextBlock Text="{Binding RaisonSociale}"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Foreground="Black"
                                       DockPanel.Dock="Left"/>

                                    <!-- Icône à droite -->
                                    <Button Width="32" Height="32"
                                    Tag="{Binding}"
                                    Background="#6495ED"
                                    BorderBrush="Transparent"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    Padding="0"
                                    Cursor="Hand">
                                        <TextBlock Text="✎" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Button>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
