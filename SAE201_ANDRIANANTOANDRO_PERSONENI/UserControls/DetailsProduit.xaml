<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.DetailsProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="1200">
    <Grid Background="#FFDDF1FF">
        <Label Content="Détails produit" HorizontalAlignment="Center" Style="{DynamicResource LabelTextBox}"/>
        <Rectangle Height="1" Stroke="#FF00538E" Width="267" RenderTransformOrigin="0.5,0.5" Margin="466,46,467,403">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <StackPanel Orientation="Horizontal" Width="630" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Height="244" Width="214">
                <Label Content="nomProduit" HorizontalAlignment="Center" Margin="0,20,0,0" x:Name="lb_nomProduit" Foreground="#335A68" FontSize="18" FontStyle="Italic"/>
                <Image Height="188" Stretch="Uniform" Width="Auto" x:Name="image_produit"/>
            </StackPanel>

            <StackPanel Margin="100,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Label Content="Catégorie :" Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="catégorieProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_categorieProduit"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Type :" Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="typeProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_typeProduit"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Type de Pointe : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="typePointeProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_typePointeProduit"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Couleur(s) : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="couleurProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_couleurProduit"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Prix : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="prixProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_prixProduit"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Quantité en stock : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="QuantiteProduit" VerticalAlignment="Center" FontSize="18" x:Name="lb_quantiteProduit"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,375,0,0" Orientation="Horizontal">
            <Button
                 Width="446"
                 Height="61"
                 FontSize="16"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Background="#FF335A68"
                 BorderBrush="{x:Null}"
                 Content="Revenir en arrière"
                 Foreground="White"
                 Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" Click="RevenirEnArriere_Click"/>
            <Button Content="test changement Image" Width="500" Click="Button_Click" />
        </StackPanel>
        
    </Grid>
</UserControl>
