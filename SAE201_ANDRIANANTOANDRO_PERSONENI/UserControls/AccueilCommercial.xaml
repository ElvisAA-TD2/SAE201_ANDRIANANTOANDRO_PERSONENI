<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.AccueilCommercial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="700"
    Background="#FFFF0303"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Label
            Margin="72,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Recherche par mot clef"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="320"
            Height="44"
            Margin="72,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="72,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Catégorie"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="72,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="352,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="352,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="630,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type de pointe"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="630,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="912,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Couleur"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="912,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <DataGrid
            Margin="0,350,0,0"
            AutoGenerateColumns="False"
            Background="Azure"
            ColumnWidth="*"
            ItemsSource="{Binding LesProduits}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CodeProduit, ValidatesOnExceptions=True}"
                    Header="Code Produit" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomProduit}"
                    Header="Nom produit" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnType.UneCategorie.NomCategorie}"
                    Header="Catégorie" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnType.NomType}"
                    Header="Type" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnTypePointe.NomTypePointe}"
                    Header="Type de pointe" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomProduit}"
                    Header="Couleur" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixVente}"
                    Header="Prix" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding QteStock}"
                    Header="Quantité en stock" />
            </DataGrid.Columns>
        </DataGrid>
        <Rectangle
            Width="100"
            Height="100"
            Margin="1598,1394,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stroke="Black" />


    </Grid>
</UserControl>
