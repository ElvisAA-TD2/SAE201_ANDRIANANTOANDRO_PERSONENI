<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.RecapitulatifCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             Width="1200">
    <Grid Background="#FFDDF1FF">
        <Label Content="Récapitulatif commande" HorizontalAlignment="Center" Style="{DynamicResource LabelTextBox}"/>
        <Rectangle Height="1" Stroke="#FF00538E" Width="329" RenderTransformOrigin="0.5,0.5" Margin="0,46,0,403" HorizontalAlignment="Center">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <StackPanel Orientation="Horizontal" Width="1000" HorizontalAlignment="Center">
            <StackPanel Width="397" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <Label Content="Revendeur :" Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="revendeurRaisonSociale" VerticalAlignment="Center" FontSize="18" x:Name="lb_raisonSociale_revendeur"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Date de création : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="datecreation" VerticalAlignment="Center" FontSize="18" x:Name="lb_dateCreation_commande"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Mode de transport : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="modeTransport" VerticalAlignment="Center" FontSize="18" x:Name="lb_modeTransport_commande"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Prix total : " Style="{DynamicResource LabelTextBox}"/>
                    <Label Content="prixTotal" VerticalAlignment="Center" FontSize="18" x:Name="lb_prixTotal_commande"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Width="588" Height="250" VerticalAlignment="Center">
                <Label Content="Produit(s) commandé(s) : " Style="{DynamicResource LabelTextBox}" VerticalAlignment="Top"/>
                <DataGrid AutoGenerateColumns="False" Style="{DynamicResource DataGridStyle}" x:Name="dg_produitCommandes" CanUserAddRows="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom produit" Binding="{Binding UnProduit.NomProduit}" Width="*"/>
                        <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding UnProduit.PrixVente}" Width="*"/>
                        <DataGridTextColumn Header="Qte commandée" Binding="{Binding QuantiteCommande}" Width="*"/>
                        <DataGridTextColumn Header="Prix" Binding="{Binding Prix}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button
                     Width="250"
                     Height="61"
                     FontSize="16"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Background="#FF335A68"
                     BorderBrush="{x:Null}"
                     Content="Revenir en arrière"
                     Foreground="White"
                     Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" Click="RevenirEnArriere_Click"/>
            <Button
                 Width="250"
                 Height="61"
                 FontSize="16"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Background="#B70909"
                 BorderBrush="{x:Null}"
                 Content="Supprimer"
                 Foreground="White"
                 Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446"  Margin="50,0,0,0"  Click="SupprimerCommande_Click" />
        </StackPanel>
    </Grid>
</UserControl>
