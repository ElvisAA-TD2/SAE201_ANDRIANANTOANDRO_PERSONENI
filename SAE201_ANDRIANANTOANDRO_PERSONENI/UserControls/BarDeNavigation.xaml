<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.BarDeNavigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="250"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF">
        <Button
            x:Name="listeDesProduits_btn"
            Width="250"
            Height="60"
            Margin="54,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF3B5D68"
            BorderBrush="{x:Null}"
            Click="ListeDesProduits_Click"
            Content="Liste des produits"
            FontSize="16"
            Foreground="White" />
        <Button
            x:Name="creationCommande_btn"
            Width="248"
            Height="60"
            Margin="300,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFADC9DC"
            BorderBrush="{x:Null}"
            Click="CreationCommande_Click"
            Content="Créer une commande"
            FontSize="16"
            Foreground="#FF3B5D68" />
        <Button
            x:Name="mesCommandes_btn"
            Width="248"
            Height="60"
            Margin="544,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFADC9DC"
            BorderBrush="{x:Null}"
            Click="MesCommandes_Click"
            Content="Mes commandes"
            FontSize="16"
            Foreground="#FF3B5D68" />
        <Image
            Margin="39,27,919,151"
            Source="/Images/Logo_pilot.png"
            Stretch="Uniform" />
        <Border BorderThickness="2" Width="276" Height="116" Background="#FFADC9DC" HorizontalAlignment="Right" CornerRadius="20" Margin="0,0,40,0">
            <StackPanel
                Width="276"
                Height="116"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal" Margin="20,5,0,0">
                    <Image Source="/Images/User.png" Stretch="Uniform" />
                    <Label
                        x:Name="lb_loginUser"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="loginUtilisateur"
                        FontSize="16"
                        Foreground="#FF3B5D68" Margin="0,20,0,0" />
                    <Button
                        x:Name="deconnexion_btn"
                        Width="58"
                        Height="40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#C14347"
                        BorderBrush="{x:Null}"
                        Click="DeconnexionBtn_Click"
                        FontSize="16"
                        Foreground="White"
                        Style="{DynamicResource Button_BorderRadiud}" Margin="40,5,0,0">
                        <Image
                            Width="16"
                            Height="22"
                            Source="/Images/logout.png"
                            Stretch="Uniform" />
                    </Button>
                </StackPanel>
                <Rectangle
                    Width="206"
                    Height="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    RenderTransformOrigin="0.5,0.5"
                    Stretch="Fill"
                    Stroke="#FF3B5D68" Margin="0,5,0,0">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" />
                            <SkewTransform />
                            <RotateTransform />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Label
                    x:Name="lb_roleUser"
                    Height="28"
                    HorizontalContentAlignment="Center"
                    Content="RoleUtilisateur"
                    FontSize="16"
                    Foreground="#FF3B5D68" />
                <!--<Rectangle
    Width="276"
    Height="116"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Panel.ZIndex="-1"
    Fill="#FFADC9DC"
    RadiusX="20"
    RadiusY="20"
    Stretch="Uniform"
    RenderTransformOrigin="0.497,0.49" />-->
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
