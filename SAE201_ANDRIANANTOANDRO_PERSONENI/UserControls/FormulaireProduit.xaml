<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.FormulaireProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="950" d:DesignWidth="1200">
    <Grid Background="#FFDDF1FF" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Background="#FFDDF1FF" Width="500">
            <Label x:Name="label_titre" Content="Modification produit" HorizontalAlignment="Center" Style="{DynamicResource LabelTextBox}"/>
            <Rectangle Height="1" Stroke="#FF00538E" Width="267" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label Content="Nom produit" Margin="0,20,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_nomProduit"/>
            <Label Content="Catégorie" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_categorie"/>
            <Label Content="Type" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_type"/>
            <Label Content="Type de pointe" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_typePointe"/>
            <Label Content="Couleur" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_couleur"/>
            <Label Content="Prix" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_prix"/>
            <Label Content="Quantité en stock" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <TextBox TextWrapping="Wrap" Text="" Style="{DynamicResource TextBoxRecherche}" x:Name="tb_qteStock"/>
            <Label Content="Image" Margin="0,10,0,0" Style="{DynamicResource LabelTextBox}"/>
            <StackPanel Orientation="Horizontal">
                <Image Width="200" Height="100" HorizontalAlignment="Left"></Image>
                <Button x:Name="btn_modifieImage"
     Width="200"
     Height="61"
     Margin="30"
     HorizontalAlignment="Right"
     VerticalAlignment="Top"
     Background="#FF335A68"
     BorderBrush="{x:Null}"
     Content="Modifier l'image"
     Foreground="White"
     FontSize="15"
     Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btn_annulation"
                    Width="200"
                    Height="61"
                    Background="#C14347"
                    BorderBrush="{x:Null}"
                    Content="Annuler"
                    Foreground="White"
                    FontSize="15"
                    Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" HorizontalAlignment="Left"/>
                <Button x:Name="btn_valider"
     Width="200"
     Height="61"
     Margin="30"
     HorizontalAlignment="Right"
     VerticalAlignment="Top"
     Background="#FF335A68"
     BorderBrush="{x:Null}"
     Content="Terminer"
     Foreground="White"
     FontSize="15"
     Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
