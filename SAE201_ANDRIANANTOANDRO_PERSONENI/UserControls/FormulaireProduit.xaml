<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.FormulaireProduit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="950"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid Background="#FFDDF1FF" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <StackPanel Width="500" Background="#FFDDF1FF">
            <Label
                x:Name="label_titre"
                HorizontalAlignment="Center"
                Content="Modification produit"
                Style="{DynamicResource LabelTextBox}" />
            <Rectangle
                Width="267"
                Height="1"
                RenderTransformOrigin="0.5,0.5"
                Stroke="#FF00538E">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label
                Margin="0,20,0,0"
                Content="Nom produit"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_nomProduit"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Catégorie"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_categorie"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Type"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_type"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Type de pointe"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_typePointe"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Couleur"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_couleur"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Prix"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_prix"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Quantité en stock"
                Style="{DynamicResource LabelTextBox}" />
            <TextBox
                x:Name="tb_qteStock"
                Style="{DynamicResource TextBoxRecherche}"
                Text=""
                TextWrapping="Wrap" />
            <Label
                Margin="0,10,0,0"
                Content="Image"
                Style="{DynamicResource LabelTextBox}" />
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="200"
                    Height="100"
                    HorizontalAlignment="Left" />
                <Button
                    x:Name="btn_modifieImage"
                    Width="200"
                    Height="61"
                    Margin="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="#FF335A68"
                    BorderBrush="{x:Null}"
                    Content="Modifier l'image"
                    FontSize="15"
                    Foreground="White"
                    RenderTransformOrigin="0.487,0.446"
                    Style="{DynamicResource Button_BorderRadiud}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btn_annulation"
                    Width="200"
                    Height="61"
                    HorizontalAlignment="Left"
                    Background="#C14347"
                    BorderBrush="{x:Null}"
                    Click="Annuler_Click"
                    Content="Annuler"
                    FontSize="15"
                    Foreground="White"
                    RenderTransformOrigin="0.487,0.446"
                    Style="{DynamicResource Button_BorderRadiud}" />
                <Button
                    x:Name="btn_valider"
                    Width="200"
                    Height="61"
                    Margin="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="#FF335A68"
                    BorderBrush="{x:Null}"
                    Click="Validation_Click"
                    Content="Terminer"
                    FontSize="15"
                    Foreground="White"
                    RenderTransformOrigin="0.487,0.446"
                    Style="{DynamicResource Button_BorderRadiud}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
