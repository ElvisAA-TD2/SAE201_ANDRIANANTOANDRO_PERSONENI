<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.CreationCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid
        Height="1175"
        Background="#FFDDF1FF"
        ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Label
            Margin="72,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Recherche par mot clef"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="320"
            Height="44"
            Margin="72,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="72,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Catégorie"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="72,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="352,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="352,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="630,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type de pointe"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="630,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="912,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Couleur"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="912,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="72,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Les produits trouvés :"
            FontSize="20"
            FontWeight="Normal"
            Style="{DynamicResource LabelTextBox}" />
        <DataGrid
            Style="{DynamicResource DataGridStyle}"
            Margin="32,382,30,542"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            ColumnWidth="*" ItemsSource="{Binding LesProduits}" SelectionChanged="DataGrid_SelectionChanged" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CodeProduit, ValidatesOnExceptions=True}"
                    Header="Code Produit" IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomProduit}"
                    Header="Nom produit"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnType.UneCategorie.NomCategorie}"
                    Header="Catégorie"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnType.NomType}"
                    Header="Type"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding UnTypePointe.NomTypePointe}"
                    Header="Type de pointe"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NomProduit}"
                    Header="Couleur"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PrixVente}"
                    Header="Prix"  IsReadOnly="True"/>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding QteStock}"
                    Header="Qte en stock"  IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Action" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="SelectionProduit_Click" Tag="{Binding}" Padding="5" Style="{DynamicResource Button_BorderRadiud}" Width="100">
                                <Image Source="/Images/Ajouter.png" Stretch="Uniform"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label
            Margin="118,670,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Votre commande"
            FontSize="24"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}"/>
        <DataGrid
            Style="{DynamicResource DataGridStyle}"
            Margin="40,736,0,183"
            AutoGenerateColumns="False"
            ColumnWidth="*"
            Height="Auto" HorizontalAlignment="Left" Width="726"
             x:Name="dg_produitsSelectionnes" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Nom produit" Binding="{Binding NomProduit}" IsReadOnly="True"/>
                <DataGridTextColumn Width="*" Header="Prix" Binding="{Binding PrixVente}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Quantité à commander" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="0" Padding="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label
            Margin="912,800,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Mode de livraison"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <ComboBox
            Width="188"
            Height="51"
            Margin="897,848,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" ItemsSource="{Binding LesModesTransports}"/>
        <Button
            Width="446"
            Height="61"
            Margin="388,1072,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF335A68"
            BorderBrush="{x:Null}"
            Content="Créer une commande"
            Foreground="White"
            Style="{DynamicResource Button_BorderRadiud}" RenderTransformOrigin="0.487,0.446" Click="CreationCommande_Click" />
        <Label HorizontalAlignment="Left" Margin="986,1074,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
