<UserControl x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.CreationCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200" >
    <Grid Background="#FFDDF1FF" Margin="0,0,0,-684">
        <Label Style="{DynamicResource LabelTextBox}" Content="Recherche par mot clef" HorizontalAlignment="Left" Margin="72,62,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="72,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Catégorie" HorizontalAlignment="Left" Margin="72,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="72,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Type" HorizontalAlignment="Left" Margin="352,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="352,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Type de pointe" HorizontalAlignment="Left" Margin="630,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="630,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Couleur" HorizontalAlignment="Left" Margin="912,182,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="912,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Les produits trouvés :" HorizontalAlignment="Left" Margin="72,324,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Normal"/>
        <DataGrid AutoGenerateColumns="False"
            Background="Azure"
            ColumnWidth="*" Margin="32,382,30,538">
            <!-- toutes les colonnes prennent un espace égal -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom produit" Width="*" />
                <DataGridTextColumn Header="Catégorie" Width="*" />
                <DataGridTextColumn Header="Type" Width="*" />
                <DataGridTextColumn Header="Type de pointe" Width="*" />
                <DataGridTextColumn Header="Couleur" Width="*" />
                <DataGridTextColumn Header="Prix" Width="*" />
                <DataGridTextColumn Header="Quantité en stock" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Style="{DynamicResource LabelTextBox}" Content="Votre commande" HorizontalAlignment="Center" Margin="0,627,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <DataGrid AutoGenerateColumns="False"
            Background="Azure"
            ColumnWidth="*" Margin="405,697,434,249">
            <!-- toutes les colonnes prennent un espace égal -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom produit" Width="*" />
                <DataGridTextColumn Header="Prix" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Style="{DynamicResource LabelTextBox}" Content="Quantité commandée" HorizontalAlignment="Left" Margin="810,696,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Style="{DynamicResource TextBoxRecherche}" HorizontalAlignment="Left" Margin="810,736,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="204" Height="44"/>
        <Label Style="{DynamicResource LabelTextBox}" Content="Mode de livraison" HorizontalAlignment="Center" Margin="0,927,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <ComboBox HorizontalAlignment="Center" Margin="0,961,0,0" VerticalAlignment="Top" Width="188" Height="51"/>
        <Button Style="{DynamicResource Button_BorderRadiud}" Content="Créer une commande" HorizontalAlignment="Center" Margin="0,1045,0,0" VerticalAlignment="Top" Height="61" Width="446" Background="#FF335A68" Foreground="White" BorderBrush="{x:Null}"/>
    </Grid>
</UserControl>
