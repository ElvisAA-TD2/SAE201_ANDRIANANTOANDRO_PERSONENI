<UserControl
    x:Class="SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls.CreationCommande"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_ANDRIANANTOANDRO_PERSONENI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="Auto"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid
        Height="1718"
        Background="#FFDDF1FF"
        ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Label
            Margin="72,62,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Recherche par mot clef"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="320"
            Height="44"
            Margin="72,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="72,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Catégorie"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="72,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="352,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="352,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="630,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Type de pointe"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="630,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="912,182,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Couleur"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="912,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="72,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Les produits trouvés :"
            FontSize="20"
            FontWeight="Normal"
            Style="{DynamicResource LabelTextBox}" />
        <DataGrid
            Margin="32,382,30,1025"
            AutoGenerateColumns="False"
            Background="Azure"
            ColumnWidth="700">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Nom produit" />
                <DataGridTextColumn Width="*" Header="Catégorie" />
                <DataGridTextColumn Width="*" Header="Type" />
                <DataGridTextColumn Width="*" Header="Type de pointe" />
                <DataGridTextColumn Width="*" Header="Couleur" />
                <DataGridTextColumn Width="*" Header="Prix" />
                <DataGridTextColumn Width="*" Header="Quantité en stock" />
            </DataGrid.Columns>
        </DataGrid>
        <Label
            Margin="489,790,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Votre commande"
            FontSize="24"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <DataGrid
            Margin="210,972,544,557"
            AutoGenerateColumns="False"
            Background="Azure"
            ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Nom produit" />
                <DataGridTextColumn Width="*" Header="Prix" />
            </DataGrid.Columns>
        </DataGrid>
        <Label
            Margin="698,972,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Quantité commandée"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <TextBox
            Width="204"
            Height="44"
            Margin="698,1012,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource TextBoxRecherche}"
            Text=""
            TextWrapping="Wrap" />
        <Label
            Margin="530,1295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Mode de livraison"
            FontSize="18"
            FontWeight="Bold"
            Style="{DynamicResource LabelTextBox}" />
        <ComboBox
            Width="188"
            Height="51"
            Margin="517,1334,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="446"
            Height="61"
            Margin="388,1612,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF335A68"
            BorderBrush="{x:Null}"
            Content="Créer une commande"
            Foreground="White"
            Style="{DynamicResource Button_BorderRadiud}" />
    </Grid>
</UserControl>
